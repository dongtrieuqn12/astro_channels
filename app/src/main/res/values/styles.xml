<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="navigation_drawer_item_textview">
        <item name="android:background">?android:attr/activatedBackgroundIndicator</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>
        <item name="android:textAppearance">?android:attr/textAppearanceListItemSmall</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">@dimen/navigation_drawer_item_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/navigation_drawer_item_horizontal_padding</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="navigation_drawer_listview">
        <item name="android:layout_width">@dimen/navigation_drawer_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:background">@color/navigation_drawer_list_background_color</item>
        <item name="android:choiceMode">singleChoice</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

    <style name="equally_sharing_width">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="equally_sharing_width.control_button">
        <item name="android:layout_margin">@dimen/activity_control_button_margin
        </item>
    </style>

    <style name="equally_sharing_height">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="list_view_channels_item_number_text_view" parent="equally_sharing_height">
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="list_view_channels_item_name_text_view" parent="equally_sharing_height">
        <item name="android:gravity">start|bottom</item>
        <item name="android:layout_weight">2</item>
    </style>

</resources>
